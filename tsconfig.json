{
    "compilerOptions": {
        "outDir": "dst",
        "sourceMap": true,
        "types": ["bun-types"],
        "lib": ["esnext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "moduleDetection": "force",
        "allowJs": true,
        "esModuleInterop": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "paths": {
            "@classes/*": ["./src/classes/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@loaders/*": ["./src/loaders/*"],
            "@neurons/*": ["./src/neurons/*"],
            "@routers/*": ["./src/routers/*"],
            "@typedefs/*": ["./src/typedefs/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "entryPoints": ["src/**/*.ts"],
        "out": "docs",
        "exclude": ["src/**/*.spec.ts"],
        "theme": "markdown",
        "readme": "README.md",
        "plugin": ["typedoc-plugin-markdown"],
        "hideGenerator": true
    }
}