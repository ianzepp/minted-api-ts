{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "dst",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dst",
        "src/**/*.spec.ts",
        "node_modules"
    ],
    "typedocOptions": {
        "entryPoints": ["src/**/*.ts"],
        "out": "docs",
        "exclude": ["src/**/*.spec.ts"],
        "theme": "markdown",
        "readme": "README.md",
        "plugin": ["typedoc-plugin-markdown"],
        "hideGenerator": true
    }
}