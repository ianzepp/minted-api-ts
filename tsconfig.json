{
    "compilerOptions": {
        "outDir": "dst",
        "sourceMap": true,
        "types": ["bun-types"],
        "lib": ["esnext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowImportingTsExtensions": false,
        "moduleDetection": "force",
        "allowJs": true,
        "esModuleInterop": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "paths": {
            "@prj/*": ["./*"],
            "@src/*": ["./src/*"],
            "@kernel/*": ["./src/kernel/*"],
            "@system/*": ["./src/system/*"],
        }
    },
    "include": [
        "./src/**/*.ts",
        "./*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "entryPoints": ["src/**/*.ts"],
        "out": "docs",
        "exclude": ["src/**/*.spec.ts"],
        "theme": "markdown",
        "readme": "README.md",
        "plugin": ["typedoc-plugin-markdown"],
        "hideGenerator": true
    }
}