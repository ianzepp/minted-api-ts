{
    "compilerOptions": {
        "outDir": "dst",
        "sourceMap": true,
        "types": ["bun-types"],
        "lib": ["esnext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowImportingTsExtensions": false,
        "moduleDetection": "force",
        "allowJs": true,
        "esModuleInterop": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "paths": {
            "@src/*": ["./src/*"],
            "@system/*": ["./src/system/*"],
            "@system.auth/*": ["./src/system.auth/*"],
            "@system.bulk/*": ["./src/system.bulk/*"],
            "@system.mail/*": ["./src/system.mail/*"],
            "@system.test/*": ["./src/system.test/*"],
            "@openai/*": ["./src/openai/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "entryPoints": ["src/**/*.ts"],
        "out": "docs",
        "exclude": ["src/**/*.spec.ts"],
        "theme": "markdown",
        "readme": "README.md",
        "plugin": ["typedoc-plugin-markdown"],
        "hideGenerator": true
    }
}